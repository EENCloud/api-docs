                },
                "bytes_per_second":{
                    "type":"float",
                    "description":"Bytes Per Second"
                }
            }
        },
        "MetricBridgeBandwidthCore":{
            "id":"MetricBridgeBandwidthCore",
            "required":[],
            "properties":{
                "properties":{

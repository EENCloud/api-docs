{
    "apiVersion": "1.0.0",
    "swaggerVersion": "1.2",
    "basePath": "https://apidocs.eagleeyenetworks.com/g",
    "resourcePath": "annotation",
    "produces": ["application/json"],
    "apis": [
        {
            "path": "/annotation",
            "operations": [
                {
                    "method": "PUT",
                    "summary": "Create Annotation",
                    "notes": "Create a new Annotation",
                    "nickname": "putAnnotation",
                    "type": "AnnotationId",
                    "parameters": [
                        {
                            "name": "device_id",
                            "description": "ID of the device the annotation should be associated with",
                            "required": true,
                            "type": "string",
                            "paramType": "form"
                        },
                        {
                            "name": "timestamp",
                            "description": "Timestamp associated with the annotation, in EEN format.",
                            "required": true,
                            "type": "string",
                            "paramType": "form"
                        },
                        {
                            "name": "data",
                            "description": "JSON Object representing the data associated with the annotation. No predefined data fields required.",
                            "required": true,
                            "type": "object",
                            "paramType": "form"
                        }
                    ],
                    "responseMessages": [
                        {
                            "code": 200,
                            "message": "Request succeeded"
                        },
                        {
                            "code": 400,
                            "message": "Unexpected or non-identifiable arguments are supplied"
                        },
                        {
                            "code": 401,
                            "message": "Unauthorized due to invalid session cookie"
                        },
                        {
                            "code": 403,
                            "message": "Forbidden due to the user missing the necessary privileges"
                        }
                    ]
                },
                {
                    "method": "POST",
                    "summary": "Update Annotation",
                    "notes": "Update an Annotation",
                    "nickname": "postAnnotation",
                    "type": "AnnotationId",
                    "parameters": [
                        {
                            "name": "id",
                            "description": "ID of the annotation being updated, which is returned by PUT /annotation",
                            "required": true,
                            "type": "string",
                            "paramType": "form"
                        },
                        {
                            "name": "device_id",
                            "description": "ID of the device the associated with the annotation being updated",
                            "required": true,
                            "type": "string",
                            "paramType": "form"
                        },
                        {
                            "name": "timestamp",
                            "description": "Timestamp associated with the annotation being updated",
                            "required": true,
                            "type": "string",
                            "paramType": "form"
                        },
                        {
                            "name": "data",
                            "description": "JSON Object representing the data to update the annotation with. No predefined data fields required.",
                            "required": true,
                            "type": "object",
                            "paramType": "form"
                        },
                        {
                            "name": "atype",
                            "description": "The type of annotation update to make. Defaults to 'mod'. 'mod'='Modify the annotation'. 'hb'='Keep annotation alive with a heartbeat'. 'end'='End the annotation'",
                            "required": false,
                            "type": "string",
                            "paramType": "form",
                            "enum":[
                                "end",
                                "hb",
                                "mod"
                            ]
                        }
                    ],
                    "responseMessages": [
                        {
                            "code": 200,
                            "message": "Request succeeded"
                        },
                        {
                            "code": 400,
                            "message": "Unexpected or non-identifiable arguments are supplied"
                        },
                        {
                            "code": 401,
                            "message": "Unauthorized due to invalid session cookie"
                        },
                        {
                            "code": 403,
                            "message": "Forbidden due to the user missing the necessary privileges"
                        }
                    ]
                }
            ]
        }
    ],
    "models":{
        "AnnotationId":{
            "id":"AnnotationId",
            "required":[],
            "properties":{
                "id":{
                    "type":"string",
                    "required": true,
                    "description":"Unique ID of the annotation"
                }
            }
        }
    }
}